<div class="col-md-8 col-md-offset-4 nested-fields">
	<div class="form-group col-md-6">
		<%=f.label :title%>
		<%=f.text_field :title, class: 'form-control', placeholder:"Panner Chilly or Chicken Manchurian"%>
	</div>

	<div class="form-group col-md-5">
		<div class="btn-group margin-top-25" data-toggle="buttons">
			<label class="btn btn-danger active">
				<%= f.radio_button :dish_type, "Non Veg", value: "1"%>
				Non Veg
			</label>
			<label class="btn btn-success">
				<%= f.radio_button :dish_type, "Veg"%>
				Veg
			</label>
		</div>
	</div>
	<div class="form-actions">
		<%= link_to_remove_association '<i class="icmn-bin"></i>'.html_safe, f, data: {confirm: "Are you sure you want to remove this?"} %>
	</div>
</div>