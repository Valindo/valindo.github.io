<div class="form-group row nested-fields">
	<div class="col-md-4">
		<label class="form-control-label">Menu Item Title</label>
		<%=f.text_field :title, class: 'form-control', placeholder:'Starters, Main-Course'%>
		<%= link_to_remove_association '<i class="icmn-bin"></i>'.html_safe, f, data: {confirm: "Are you sure you want to remove this?"} %>
	</div>

	<div class="col-md-2 nested-fields">
			<%= f.fields_for :images do |i| %>
			<%= render 'image_fields', f:i %>
			<% end %>
			<%= link_to_add_association 'Add Image', f, :images, class:"btn btn-primary"%>
	</div>

	<div class="col-md-6 margin-top-30">
		<%= f.fields_for :dishes do |m| %>
		<%= render 'dish_fields', f: m %>
		<% end %>
		<%= link_to_add_association 'Add Dish', f, :dishes, class:"btn btn-primary"%>
		<%# link_to_add_fields "+ Dish", f, :dishes, "btn btn-success", "Add A new Dish" %>
	</div>
</div>