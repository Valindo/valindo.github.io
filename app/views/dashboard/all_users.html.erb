<div class="page-content-inner">
	<section class="panel">
		<div class="panel-heading">
			<h3>Users Listing</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-12">
					<table class="table">
						<thead>
							<tr>
								<th><strong>Email</strong></th>
								<th><strong>Delete</strong></th>
								<th><strong>Status</strong></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each_with_index do |end_user, index| %>
							<% if not end_user.admin? %>
							<tr>
								<td>
									<%= end_user.email %>
								</td>
								<td>
									<%= link_to 'Delete User', admin_destroy_user_path(end_user), class: 'btn btn-primary' , method: :delete, data: {
										confirm: 'are you sure?'} %>
									</td>
									<td>
										<% if end_user.paid? %>
											<%= link_to 'Block', admin_block_user_path(end_user), method: :post, class: 'btn btn-danger' %>
										<% else %>
											<%= link_to 'Unblock', admin_block_user_path(end_user), method: :post, class: 'btn btn-danger' %>
										<% end %>
									</td>
								</tr>
								<% end %>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</section>
	</div>
