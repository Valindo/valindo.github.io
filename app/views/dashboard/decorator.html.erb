<div class="page-content-inner">
	<section class="panel">
		<div class="panel-heading">
			<h3>Decorator Listing</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-12">
					<table class="table">
						<thead>
							<tr>
								<th><strong>#</strong></th>
								<th><strong>Title</strong></th>
								<th><strong>Description</strong></th>
								<th><strong>Address</strong></th>
							</tr>
						</thead>
						<tbody>
							<% @decorators.each_with_index do |decorator, index| %>
								<tr>
									<td><%= index + 1 %></td>
									<td><%= link_to "#{decorator.title}", decorator_path(decorator) %></td>
									<td><%= truncate(decorator.description) %></td>
									<% if decorator.address.location.empty? %>
										<td>Address not provided</td>
									<% else %>
										<td><%= decorator.address.location %></td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</div>