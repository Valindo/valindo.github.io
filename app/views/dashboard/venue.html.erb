<div class="page-content-inner">
	<section class="panel">
		<div class="panel-heading">
			<h3>Venue Listing</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-12">
					<table class="table">
						<thead>
							<tr>
								<th><strong>#</strong></th>
								<th><strong>Title</strong></th>
								<!-- <th><strong>Description</strong></th> -->
								<th><strong>Address</strong></th>
							</tr>
						</thead>
						<tbody>
							<% @venues.each_with_index do |venue, index| %>
							<tr>
								<td>
									<%= index + 1 %>
								</td>
								<td>
									<%= link_to "#{venue.title}", venue_path(venue) %>
								</td>
								<!-- <td> -->
									<%# truncate(venue.description) %>
								<!-- </td> -->
								<td>
									<%= venue.address.location %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</div>
