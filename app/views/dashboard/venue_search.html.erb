<div class="page-content-inner">
	<section class="panel">
		<div class="panel-heading">
			<h3>Venue Listing</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-12">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Title</th>
								<th>Description</th>
								<th>Address</th>
								<th>Delete</th>
							</tr>
						</thead>
						<tbody>
							<% @venue_search.each_with_index do |venue, index| %>
							<tr>
								<td>
									<%= index + 1 %>
								</td>
								<td>
									<%= link_to "#{venue.title}", venue_path(venue) %>
								</td>
								<td>
									<%= venue.description %>
								</td>
								<td>
									<%= venue.address.location %>
								</td>
								<td>
									<%= link_to '<i class="icmn-bin"></i>'.html_safe, venue_path(venue), method: :delete, data: { confirm: 'Are you sure ?'} %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</div>


