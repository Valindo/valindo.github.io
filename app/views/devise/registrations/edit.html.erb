<section class="panel">
  <div class="panel-heading">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="avatar">Avatar</label>
        </div>
        <div class="col-md-9">
          <%= f.file_field :avatar , class: 'form-control'%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="name">Name</label>
        </div>
        <div class="col-md-9">
          <%= f.text_field :name, autofocus: true , class: 'form-control'%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="email">Email</label>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autofocus: true , class: 'form-control'%>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="password">Password</label>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "off" , placeholder:"(leave blank if you don't want to change it)", class:'form-control'%>
          <% if @minimum_password_length %>
          <small><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="password_confirmation">Password Confirmation</label>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"(leave blank if you don't want to change it)", class:'form-control'%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <label class="form-control-label" for="current_password">Current Password</label>
        </div>
        <div class="col-md-9">
          <%= f.password_field :current_password, autocomplete: "off", placeholder: '(we need your current password to confirm your changes)', class: 'form-control',  data: { validation: "[NOTEMPTY]"},required: true%>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Update", class:'btn width-150 btn-primary'%>
      </div>
      <% end %>

      <h3>Deactivate my account</h3>

      <p>Unhappy?</p>
      <div class="form-actions">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:'btn width-150 btn-primary'%>
      </div>

      <%= link_to "Back", dashboard_profile_path(current_user) %>
    </div>
  </div>
</section>

<script type="text/javascript">
  $.validate({
        submit: {
          settings:{
            form: '.edit_user',
            inputContainer: '.form-group',
            errorListClass: 'form-control-error',
            errorClass: 'has-danger'
          }
        }
      });
</script>
