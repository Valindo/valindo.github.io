<section class="page-content">
	<div class="page-content-inner">
		<div class="row">
			<div class="col-lg-8">
				<section class="panel">
					<div class="panel-heading">
						<div class="pull-right">
							<%= link_to '<i class="icmn-pencil3"></i> <b>Edit</b>'.html_safe, edit_planner_path , class: 'btn btn-squared btn-primary' %>	
						</div>
						<h1><%= @planner.title %></h1>
					</div>
					<div class="panel-body">
						<p><%= @planner.description %></p>
					</div>
				</section>
			</div>

			<div class="col-lg-4">
				<section class="panel">
					<div class="panel-heading">
						<h3>Address</h3>
					</div>
					<div class="panel-body">
						<p><%= @planner.address.location %></p>
						<% if @planner.thumbnail %>
						<%= image_tag @planner.thumbnail.url, width: '100%'  %>
						<%end%>
					</div>
				</section>	
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<section class="panel">
					<div class="panel-heading">
						<h3>Current Offers</h3>
					</div>
					<div class="panel-body">
						<p><i class="icmn-svg"></i> <%= @planner.offer.description %></p>
					</div>
				</section>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<section class="panel">
					<div class="panel-heading">
						<h1>Contact Information</h1>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-4">
								<h5>Mobile</h5>
							</div>
							<div class="col-lg-4">
								<%= @planner.contact.mobile %>
							</div>
							<div class="col-lg-4">
								<%= @planner.contact.mobile_alt %>
							</div>
						</div>

						<div class="row">
							<div class="col-lg-4">
								<h5>Landline</h5>
							</div>
							<div class="col-lg-4">
								<%= @planner.contact.landline %>
							</div>
							<div class="col-lg-4">
								<%= @planner.contact.landline_alt %>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<section class="panel">
					<div class="panel-heading">
						<h1>Images</h1>
					</div>
					<div class="panel-body">
						<div class="app-gallery clearfix">
							<% @planner.images.each do |image| %>
							<div class="app-gallery-item" style="background-image:url(<%= image.picture.url %>)">
								<div class="app-gallery-item-hover">
									<p style="color: white !important"><%= image.caption %></p>
								</div>
							</div>
							<% end %>
						</div>
					</div>
				</section>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<section class="panel">
					<div class="panel-heading">
						<h1>Terms &amp; Conditions</h1>
					</div>
					<div class="panel-body">
						<%= @planner.terms %>
					</div>
				</section>
			</div>
		</div>
	</div>
</section>