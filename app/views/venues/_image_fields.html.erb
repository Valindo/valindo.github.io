<div class="form-group row nested-fields">
	<div class="col-md-3">
		<label for="caption">Image Caption</label>
	</div>
	<div class="col-md-4">
		<%= f.text_field :caption , class: 'form-control'%>
	</div>
	<div class="col-md-4">
		<%= f.file_field :picture %>
	</div>
	<div class="col-md-1">
		<%= link_to_remove_association '<i class="icmn-bin"></i>'.html_safe, f, data: {confirm: "Are you sure you want to remove this?"} %>
	</div>
</div>