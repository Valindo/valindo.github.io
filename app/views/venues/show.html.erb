
<div class="page-content-inner">
	<div class="row">
		<div class="col-lg-8">
			<section class="panel">
				<div class="panel-heading">
				<% if @edit_button %>
					<div class="pull-right">
						<%= link_to '<i class="icmn-pencil3"></i> <b>Edit</b>'.html_safe, edit_venue_path , class: 'btn btn-squared btn-primary' %>	
					</div>
				<% end %>
					<h1><%= @venue.title %><sub><small>(<%= @venue.venue_type %>)</small></sub></h1>

				</div>
				<div class="panel-body">
					<p>Rs. <%= @venue.price %></p>
					<p><%= @venue.description %></p>
				</div>
			</section>
		</div>

		<div class="col-lg-4">
			<section class="panel">
				<section class="panel-heading">
					<h3>Address</h3>
				</section>
				<div class="panel-body">
					<p><%= @venue.address.location %></p>
					<% if @venue.thumbnail %>
						<%= image_tag @venue.thumbnail.url , width: '100%' %>
					<%end%>
				</div>
			</section>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<div class="panel-heading">
					<h3>Current Offers</h3>
				</div>
				<div class="panel-body">
					<p><i class="icmn-svg"></i> <%= @venue.offer.description %></p>
				</div>
			</section>
		</div>
	</div>

	<% if @venue.contact != nil %>
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<div class="panel-heading">
					<h1>Contact Information</h1>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-4">
							<h5>Mobile</h5>
						</div>
						<div class="col-lg-4">
							<%= @venue.contact.mobile %>
						</div>
						<div class="col-lg-4">
							<%= @venue.contact.mobile_alt %>
						</div>
					</div>

					<div class="row">
						<div class="col-lg-4">
							<h5>Landline</h5>
						</div>
						<div class="col-lg-4">
							<%= @venue.contact.landline %>
						</div>
						<div class="col-lg-4">
							<%= @venue.contact.landline_alt %>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
	<% end %>
	<section class="panel">
		<div class="panel-heading">
			<h1>Images</h1>
		</div>
		<div class="panel-body">
			<div class="app-gallery clearfix">
				<% @venue.images.each do |image| %>
				<div class="app-gallery-item" style="background-image:url(<%= image.picture.url %>)">
					<div class="app-gallery-item-hover">
						<p style="color: white !important"><%= image.caption %></p>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</section>

	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<div class="panel-heading">
					<h3>Amenities</h3>
				</div>
				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Title</th>
								<th>Description</th>
								<th>Quantity</th>
							</tr>
						</thead>
						<tbody>
							<% @venue.amenities.each_with_index do |amenity, index| %>
							<tr>
								<td><%= index + 1 %></td>
								<td><%= amenity.title %></td>
								<td><%= amenity.description %></td>
								<td><%= amenity.quantity %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<div class="panel-heading">
					<h1>Terms &amp; Conditions</h1>
				</div>
				<div class="panel-body">
					<%= @venue.terms %>
				</div>
			</section>
		</div>
	</div>

</div>
